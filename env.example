# Go Loyalty & Benefits Platform - Environment Configuration
# Copy this file to .env and adjust values as needed

# Common Application Settings
APP_NAME=go-loyalty-benefits
APP_ENVIRONMENT=development
APP_LOG_LEVEL=debug

# Service Ports
AUTH_SVC_HTTP_ADDR=:8081
LOYALTY_SVC_HTTP_ADDR=:8082
CATALOG_SVC_HTTP_ADDR=:8083
REDEMPTION_SVC_HTTP_ADDR=:8084
PARTNER_GATEWAY_HTTP_ADDR=:8085
NOTIFY_SVC_HTTP_ADDR=:8086

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_DB=loyalty
PG_USER=loyalty
PG_PASSWORD=loyalty
PG_SSLMODE=disable
PG_MAX_CONNS=10

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=loyalty
MONGO_TIMEOUT=10s

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=go-loyalty-benefits
KAFKA_GROUP_ID=go-loyalty-benefits
KAFKA_VERSION=2.8.0

# Kafka Topics
KAFKA_TOPICS_POINTS_EARNED=points.earned.v1
KAFKA_TOPICS_REDEMPTION_REQUEST=redemption.requested.v1
KAFKA_TOPICS_REDEMPTION_COMPLETE=redemption.completed.v1
KAFKA_TOPICS_REDEMPTION_FAILED=redemption.failed.v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=go-loyalty-benefits
JWT_AUDIENCE=go-loyalty-clients
JWT_EXPIRATION=24h

# mTLS Configuration (optional)
MTLS_ENABLED=false
MTLS_CERT_FILE=
MTLS_KEY_FILE=
MTLS_CA_FILE=

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=go-loyalty-benefits
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Partner Gateway Configuration
PARTNER_GATEWAY_TIMEOUT=30s
PARTNER_GATEWAY_RETRY_ATTEMPTS=3
PARTNER_GATEWAY_CIRCUIT_BREAKER_THRESHOLD=5

# Notification Service Configuration
NOTIFY_SVC_EMAIL_ENABLED=false
NOTIFY_SVC_SMS_ENABLED=false
NOTIFY_SVC_PUSH_ENABLED=false

# Development Settings
DEV_MODE=true
DEV_SEED_DATA=true
DEV_LOG_REQUESTS=true
